<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.suppliq.manufacturepro.Controllers.AddProductController"
      spacing="15" alignment="TOP_RIGHT"
      prefWidth="420" prefHeight="500"
      nodeOrientation="RIGHT_TO_LEFT"
      stylesheets="@../Styles/product-style.css"
      styleClass="dialog-container">

    <!-- 转专转 -->
    <Label fx:id="formTitleLabel"
           text=" 住祝 爪专 砖"
           styleClass="header-label-dark"
           alignment="CENTER"
           maxWidth="Infinity"/>

    <!-- 砖转 驻住 -->
    <TextField fx:id="nameField" promptText="砖 爪专" styleClass="form-field"/>
    <TextArea fx:id="descriptionField" promptText="转专" styleClass="form-field"/>
    <TextField fx:id="priceField" promptText="专" styleClass="form-field"/>
    <TextField fx:id="stockField" promptText="转 " styleClass="form-field"/>
    <TextField fx:id="categoryField" promptText="拽专" styleClass="form-field"/>

    <!-- 驻转专 -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="砖专" fx:id="saveButton" styleClass="save-button"/>
        <Button text="" fx:id="cancelButton" styleClass="cancel-button"/>
    </HBox>
</VBox>
